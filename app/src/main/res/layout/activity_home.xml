<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_introImage"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    />

    <TextView
        android:id="@+id/txt_introname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:bufferType="editable"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/image_introImage"
        app:layout_constraintStart_toStartOf="@+id/image_introImage"
        app:layout_constraintTop_toBottomOf="@+id/image_introImage" />

    <TextView
        android:id="@+id/txt_intrombti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:bufferType="editable"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/image_introImage"
        app:layout_constraintStart_toStartOf="@+id/image_introImage"
        app:layout_constraintTop_toBottomOf="@+id/txt_introname" />

</androidx.constraintlayout.widget.ConstraintLayout>